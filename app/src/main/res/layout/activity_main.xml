<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".MainActivity">

    <!-- Puzzle Game View -->
    <com.devrity.puzzler.ui.GameView
        android:id="@+id/game_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:background="#C8E6C9"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/thumbnail_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Thumbnail Preview -->
    <ImageView
        android:id="@+id/thumbnail_preview"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_margin="6dp"
        android:background="#A5D6A7"
        android:padding="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/button_row"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Row -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Replay Button -->
        <ImageButton
            android:id="@+id/replay_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            
            android:contentDescription="@string/replay"
            android:src="@android:drawable/ic_menu_revert" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            
            android:contentDescription="@string/settings"
            android:src="@android:drawable/ic_menu_manage" />

        <!-- Next Button -->
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            
            android:contentDescription="@string/next"
            android:src="@android:drawable/ic_media_next" />

        <!-- Premium Button -->
        <ImageButton
            android:id="@+id/premium_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            
            android:contentDescription="@string/premium"
            android:src="@android:drawable/ic_lock_lock" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
