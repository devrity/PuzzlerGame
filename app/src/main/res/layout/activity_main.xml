<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="6dp"
    tools:context=".MainActivity">

    <!-- Puzzle Game View -->
    <com.devrity.brainnotpuzzler.ui.GameView
        android:id="@+id/game_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:background="#C8E6C9"
        android:saveEnabled="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- b) Middle Area -->

    <!-- b > right: Preview image (50% width) -->
    <ImageView
        android:id="@+id/thumbnail_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:background="#A5D6A7"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/thumbnail_preview"
        android:saveEnabled="false"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/game_view"
        app:layout_constraintBottom_toTopOf="@+id/button_row"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- b > left: 2x2 Grid for stats -->
    <GridLayout
        android:id="@+id/moves_counter_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="@+id/thumbnail_preview"
        app:layout_constraintBottom_toBottomOf="@+id/thumbnail_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/thumbnail_preview">

        <!-- Top-Left: Icon -->
        <ImageView
            android:id="@+id/moves_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:padding="8dp"
            android:src="@drawable/ic_moves"
            android:contentDescription="@string/moves_counter_icon" />

        <!-- Top-Right: Counter -->
        <TextView
            android:id="@+id/moves_counter_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="123" />

        <!-- Bottom-Left: Empty -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <!-- Bottom-Right: Empty -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

    </GridLayout>

    <!-- c) Bottom Button Row -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Replay Button -->
        <ImageButton
            android:id="@+id/replay_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:contentDescription="@string/replay"
            android:src="@android:drawable/ic_menu_revert" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:contentDescription="@string/settings"
            android:src="@android:drawable/ic_menu_manage" />

        <!-- Gallery Button -->
        <ImageButton
            android:id="@+id/gallery_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:contentDescription="@string/gallery"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Premium Button -->
        <ImageButton
            android:id="@+id/premium_button"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:contentDescription="@string/premium"
            android:src="@android:drawable/ic_lock_lock" />

    </LinearLayout>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
