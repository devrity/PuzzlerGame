<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".MainActivity">

    <!-- The new Start Screen Image -->
    <ImageView
        android:id="@+id/start_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:contentDescription="@string/start_image_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Group to control visibility of all main UI elements -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/main_layout_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="left_panel,game_view" />

    <!-- Left Panel Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#E8F5E9"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.4">

        <!-- Thumbnail Preview -->
        <ImageView
            android:id="@+id/thumbnail_preview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#A5D6A7"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/thumbnail_preview"
            android:saveEnabled="false"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1" />

        <!-- Move Counter 2x2 Grid -->
        <GridLayout
            android:id="@+id/moves_counter_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintTop_toTopOf="@+id/thumbnail_preview"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail_preview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/thumbnail_preview">

            <!-- Top-Left: Icon -->
            <ImageView
                android:id="@+id/moves_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:padding="8dp"
                android:src="@drawable/ic_moves"
                android:contentDescription="@string/moves_counter_icon" />

            <!-- Top-Right: Counter -->
            <TextView
                android:id="@+id/moves_counter_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="123" />

            <!-- Bottom-Left: Empty -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <!-- Bottom-Right: Empty -->
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

        </GridLayout>

        <!-- Button Row -->
        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/replay_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="@string/replay"
                android:src="@android:drawable/ic_menu_revert" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="@string/settings"
                android:src="@android:drawable/ic_menu_manage" />

            <ImageButton
                android:id="@+id/gallery_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="@string/gallery"
                android:src="@android:drawable/ic_menu_gallery" />

            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:contentDescription="@string/premium"
                android:src="@android:drawable/ic_lock_lock" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Right Panel - Game View -->
    <com.devrity.brainnotpuzzler.ui.GameView
        android:id="@+id/game_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="6dp"
        android:background="#C8E6C9"
        android:saveEnabled="false"
        app:layout_constraintStart_toEndOf="@+id/left_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/single_win_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:contentDescription="@string/single_win_image_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
