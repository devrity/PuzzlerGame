<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    tools:context=".MainActivity">

    <!-- Left Panel Container (30% width) -->
    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E8F5E9"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3">

        <!-- Thumbnail Preview -->
        <ImageView
            android:id="@+id/thumbnail_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:background="#A5D6A7"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/thumbnail_preview" />

        <!-- Button Row (single row, 4 buttons) -->
        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="6dp">

            <!-- Replay Button -->
            <ImageButton
                android:id="@+id/replay_button"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                
                android:contentDescription="@string/replay"
                android:src="@android:drawable/ic_menu_revert" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                
                android:contentDescription="@string/settings"
                android:src="@android:drawable/ic_menu_manage" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                
                android:contentDescription="@string/next"
                android:src="@android:drawable/ic_media_next" />

            <!-- Premium Button -->
            <ImageButton
                android:id="@+id/premium_button"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                
                android:contentDescription="@string/premium"
                android:src="@android:drawable/ic_lock_lock" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Panel - Game View (70% width) -->
    <com.devrity.brainnotpuzzler.ui.GameView
        android:id="@+id/game_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#C8E6C9"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/left_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
